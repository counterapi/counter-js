{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "platformAutomerge": true,
  "packageRules": [
    {
      "enabled": true,
      "automerge": true,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    },
    {
      "enabled": true,
      "automerge": false,
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}